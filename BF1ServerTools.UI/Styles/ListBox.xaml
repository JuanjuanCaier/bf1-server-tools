                                    <Border Name="border" BorderThickness="0" />
                                    <ContentPresenter />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#EEEEEE" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1E88E5" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            Width="24"
                            Height="24"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderBrush="#67C23A"
                            BorderThickness="1"
                            CornerRadius="12"
                            SnapsToDevicePixels="True">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Text="{Binding Index}"
                                TextAlignment="Center" />
                        </Border>
                        <Border
                            Grid.Column="1"
                            Width="50"
                            Height="50"
                            Margin="1"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            DockPanel.Dock="Left">
                            <Image Source="{Binding Avatar, Converter={StaticResource StringToImageSourceConverter}}" Style="{DynamicResource ImageStyle_HighQuality}" />
                        </Border>
                        <StackPanel
                            Grid.Column="2"
                            Margin="10,0,10,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,3"
                                VerticalAlignment="Bottom"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{Binding DisplayName}" />
                            <TextBlock VerticalAlignment="Top" Text="{Binding PersonaId}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
